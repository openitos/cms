<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :new_date %>
    <%= f.association :news_categories %>
    <%= f.input :important %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
